@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/site.css">

<div class="container">
    <img src="https://th.bing.com/th/id/OIP.Zfr9QoLyjB3Cbv6PB7mMOgHaE8?w=242&h=180&c=7&r=0&o=5&pid=1.7" />
    
    <div class="overlay">Welcome to Gym-Tracker</div>

</div>

<form id="locationForm" action="/searchResults">
    <i class="fa-solid fa-location-arrow"></i>
    <input type="text" id="locInp" name="user" class="form-control" value="Search For a User" />
    
    <input type="submit" id="submitBtn" value="Search" class="btn btn-primary" />
</form>
<button id="locBtn" onclick="getLocation()"><i class="fa fa-location-arrow"></i></button>

<div id="results">
</div>


<script type="module">
    addLocationFormListen()
</script>